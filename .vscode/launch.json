    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Microcontroller",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/build/${workspaceRootFolderName}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F103VE",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/stm32f1x.cfg"
